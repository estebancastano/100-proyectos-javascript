<body>
    <main class="container">
        <h1>Timer</h1>
        <span class="timer">
            <p id="hours">00</p>: 
            <p id="minutes">00</p>: 
            <p id="seconds">00</p>
        </span>
        <div class="buttons">
            <button id="startButton">Start</button>
            <button id="stopButton">Stop</button>
        </div>
    </main>
